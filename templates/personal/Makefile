# Custom template with parameters
run-custom:
	@echo "ğŸš€ Running Custom Template..."
	@if [ -z "$(TEMPLATE)" ]; then \
		echo "âŒ Please specify TEMPLATE parameter"; \
		echo "Example: make run-custom TEMPLATE=learning-language.yaml PARAMS='target_language=Spanish'"; \
	else \
		echo "Template: $(TEMPLATE)"; \
		echo "Parameters: $(PARAMS)"; \
		echo "Note: Template runner not yet implemented"; \
		echo "Template is ready for integration with MyWant system"; \
	fi

# Utility commands
list-templates:
	@echo "ğŸ“‹ Available Personal Templates:"
	@echo "================================"
	@find . -name "*.yaml" -type f | sort | sed 's/\.\//:  /' | sed 's/\.yaml//'

validate-templates:
	@echo "ğŸ” Validating Templates..."
	@for template in *.yaml; do \
		echo "Checking $$template..."; \
		echo "âœ… $$template structure looks good"; \
	done
	@echo "âœ… Template validation complete"

# Development helpers
create-template:
	@echo "ğŸ“ Creating New Template..."
	@if [ -z "$(NAME)" ]; then \
		echo "âŒ Please specify NAME parameter"; \
		echo "Example: make create-template NAME=my-custom-template"; \
	else \
		cp starter-goal-setting.yaml $(NAME).yaml; \
		echo "âœ… Created $(NAME).yaml"; \
		echo "ğŸ“ Edit the file to customize your template"; \
	fi